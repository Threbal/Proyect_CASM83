{
  "compilerOptions": {
    // Paths
    "rootDir": "./src",
    "outDir": "./dist",

    // Node ESM real
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "lib": ["ES2020"],

    // Interop / calidad
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,

    // Mapas opcionales (puedes apagar para builds más rápidos)
    "sourceMap": false,
    "declaration": false,
    "declarationMap": false
  },
  "include": ["src"]
}
