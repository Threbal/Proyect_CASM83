{
  "compilerOptions": {
    // Paths
    "rootDir": ".",
    "outDir": "./dist",

    // Node ESM real
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "lib": ["ES2020"],

    // Interop / calidad
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,

    // Mapas opcionales
    "sourceMap": false,
    "declaration": false,
    "declarationMap": false
  },
  "include": ["src", "scripts"]
}
